
@{
    ViewData["Title"] = "Index";
}
<link rel= "stylesheet" href="~/css/datatable.css">
<h1>Dias Feriados</h1>

<!-- Button trigger modal -->
<!-- Button trigger modal -->
<button onclick="Editar(0)" type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  Nuevo
</button>

@*<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  Lanzar Modal
</button>*@


<div id="divContenedor">

</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Formulario de los dias feriados</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
         <form id="frmGuardarDiaNoLaborale" method="post" class="mb-3">

              <div class="row">
                    <div class="col-md-6">
                      <label>Fecha</label>
                      <input type="hidden" class="form-control" readonly name="registro" />
                      <input type="datetime-local" class="form-control" id="fecha"  name="fecha" />
                  </div>
                  <div class="col-md-6">
                      <label>Descripcion</label>
                      <input type="text" class="form-control" name="descripcion" />
                  </div>

              </div>
             <div class="form-group col-md-6">
               <label>Estatus</label>
                  <select class="form-control ob" name="tipo" id="tipo">
                     <option value="">--Seleccione--</option>
                     <option value="0">No Laboral</option>
                     <option value="1">Laborable</option>
                  </select>                 
             </div>
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary" onclick="GuardarDatos()">Guardar</button>
      </div>
    </div>
  </div>
</div>

<script src="~/js/jquery.js"></script>
<script src="~/js/datatable.js"></script>
<script src="~/js/sweetalert2@11.js"></script>
<script src=~/js/generic.js></script>
<script src=~/js/diasNoLaboralesFeriados.js></script>